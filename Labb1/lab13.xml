<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.cecilialagerwall.labb1.MainActivity">


    <TextView
        android:text="@string/trivsel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox"
        android:text="@string/good"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:text="@string/very_good"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_toEndOf="@+id/checkBox"
        android:layout_marginStart="23dp"
        android:id="@+id/checkBox2" />

    <CheckBox
        android:text="@string/best"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox3"
        android:layout_below="@+id/textView3"
        android:layout_toEndOf="@+id/checkBox2"
        android:layout_marginStart="24dp" />

    <TextView
        android:text="@string/reading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBox2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/textView5" />

    <CheckBox
        android:text="@string/ja"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:id="@+id/checkBox4" />

    <CheckBox
        android:text="@string/nej"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_toEndOf="@+id/checkBox"
        android:id="@+id/checkBox5" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/liulogo"
        android:id="@+id/imageView"
        android:contentDescription="@string/liu_logga"
        android:scaleX="0.5"
        android:scaleY="0.5"
        android:layout_alignTop="@+id/textView5"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="@string/logga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:id="@+id/textView7"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignEnd="@+id/textView3" />

    <CheckBox
        android:text="@string/ja"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignParentStart="true"
        android:id="@+id/checkBox6" />

    <CheckBox
        android:text="@string/nej"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/checkBox6"
        android:layout_alignStart="@+id/checkBox2"
        android:id="@+id/checkBox7" />

    <Button
        android:text="@string/skicka_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp"
        android:id="@+id/button"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
